<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
        <entity name="doctrine\core\entities\Specialite" table="specialite">
                <id name="id" type="integer" column="id"></id>
                <field name="libelle" column="libelle" type="string"/>
                <field name="description" column="description" type="string"/>
                 <one-to-many field="motifvisites"
                             target-entity="doctrine\core\entities\MotifVisite"
                             mapped-by="motif_visite">
                </one-to-many>
                <one-to-many field="praticiens"
                             target-entity="doctrine\core\entities\Praticien"
                             mapped-by="specialite_id">
                </one-to-many>
        </entity>
</doctrine-mapping>